#!/bin/sh

# https://kisslinux.xyz/package-manager#6.0

# https://github.com/kisslinux/kiss/commit/d765dbd043d5a69a15875f2cd0ff81cdaaa2d97f
TYPE=$1
PKG=$2
DEST=$3

case $TYPE in
	pre-build) echo "$PKG" > $HOME/source/shellscript/assets/kiss_build ;;
	build-fail) echo "$PKG: build failed" > $HOME/source/shellscript/assets/kiss_build ;;

	# -f: no error if file doesn't exist
	post-install) rm -f $HOME/source/shellscript/assets/kiss_build ;;
	post-build) rm -f $HOME/source/shellscript/assets/kiss_build ;;
esac

# $HOME/source/shellscript/short/statusbar will then use kiss_build to display, using xsetroot
